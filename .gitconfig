[user]
    name = unsip
    email = unsip@tutamail.com

[core]
    editor = vim

[alias]
    br = branch
    ci = commit
    cl = clone
    co = checkout
    cp = cherry-pick
    di = diff
    fa = fetch --all --tags --prune --prune-tags
    lg = log --date=relative --graph
    lga = log --date=relative --graph --pretty=short
    lgd = log --pretty=format:'%ci | %h | %s'
    st = status
    sub = submodule
    sw = show --pretty=fuller
    tree = log --graph --decorate --pretty=oneline
    who = shortlog -snce
    wt = worktree

[color]
    branch = auto
    diff = auto
    grep = auto
    interactive = auto
    pager = true
    showBranch = auto
    status = auto
    ui = true

[commit]
    verbose = 1

[fetch]
    prune = true

[format]
    pretty = oneline
    signOff = true

[log]
    abbrevCommit = true

[merge]
    ff = false

[pull]
    ff = true
    verbose = true

[pager]
    branch = false
    tag = false

[push]
    default = simple

[status]
    showStash = true

[diff]
    renameLimit = 3000
